<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heliossoftwaredeveloper.heliosandroidfundamentals.Notification.NotificationActivity">

    <Button
        android:id="@+id/btn_notification_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_notification_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="NOTIFY"
        app:layout_constraintBottom_toTopOf="@+id/btn_notification_update"
        app:layout_constraintStart_toStartOf="@+id/btn_notification_update"
        />

    <Button
        android:id="@+id/btn_notification_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="CANCEL"
        app:layout_constraintStart_toStartOf="@+id/btn_notification_update"
        app:layout_constraintTop_toBottomOf="@+id/btn_notification_update"
        />

</android.support.constraint.ConstraintLayout>
